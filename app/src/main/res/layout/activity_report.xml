<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ramin.petfinder.ReportActivity"
    android:background="#547d9f">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Are you reporting a lost pet or a found pet?"
                android:id="@+id/textView4"
                android:textAlignment="center"
                android:textColor="#454c61"
                android:textStyle="bold"
                android:textSize="54dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/lost"

                android:text="Lost"
                android:textColor="#FFFFFF"
                android:textSize="14sp"

                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/buttonshape2"
                android:layout_gravity="center_horizontal"
                android:clickable="true"
                android:onClick="lostClick" />

            <Button
                android:id="@+id/found"

                android:text="Found"
                android:textColor="#FFFFFF"
                android:textSize="14sp"

                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/buttonshape3"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="foundClick"
                android:clickable="true" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
